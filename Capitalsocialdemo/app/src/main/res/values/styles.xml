<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grisclaro</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/grisclaro</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/grisclaro</item>
        <item name="colorControlNormal">@color/grisclaro</item>
        <item name="colorControlActivated">@color/grisclaro</item>

        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
</resources>
